@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor;

@if (HttpContextAccessor.HttpContext.User.Identity.IsAuthenticated)
{
    <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" style="padding:0; display:inline;flex:none;margin-top:8px;">
        <li class="nav-item" style="padding:0; display:inline;flex:none">
            <button type="submit" class="nav-link text-dark" style="padding:0;margin:0;background-color:white;border-width:0px">Sign Out</button>
        </li>       
    </form>
}
else
{

    <li class ="nav-item">
        <a class="nav-link text-dark" asp-page="/Account/Login">Sign in</a>
    </li>

}
